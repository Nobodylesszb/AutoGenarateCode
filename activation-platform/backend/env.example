# 环境变量配置示例
APP_NAME=激活码平台
APP_VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/activation_platform

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# JWT 配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 支付配置 - 微信支付
WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-merchant-id
WECHAT_API_KEY=your-wechat-api-key
WECHAT_NOTIFY_URL=http://your-domain.com/api/v1/webhook/payment/wechat

# 支付配置 - 支付宝
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_NOTIFY_URL=http://your-domain.com/api/v1/webhook/payment/alipay

# 支付配置 - Ping++
PINGXX_API_KEY=sk_test_xxx
PINGXX_APP_ID=app_xxx
PINGXX_PRIVATE_KEY=/absolute/path/to/rsa_private_key.pem
PINGXX_NOTIFY_URL=http://your-domain.com/api/v1/webhook/payment/pingxx

# 激活码配置
ACTIVATION_CODE_LENGTH=16
ACTIVATION_CODE_PREFIX=ACT
ACTIVATION_CODE_EXPIRE_DAYS=365

# 安全配置
MAX_ACTIVATION_ATTEMPTS=5
RATE_LIMIT_PER_MINUTE=60

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
